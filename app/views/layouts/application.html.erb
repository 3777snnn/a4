<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header style="background-color: #343a40;">
      <script src="https://kit.fontawesome.com/3cec55645f.js" crossorigin="anonymous"></script>
      <div class="container">  <!-- この行を追加 -->
      <div class="row">
      <div class="col-lg-1">
      <div class="mt-1"><%= link_to "Bookers", root_path, class:"text-white h3" %></div>
      </div>
      <div class="col-lg-6"></div>
      <div class="col-lg-5">
      <div class="d-flex mt-2">
      <% if user_signed_in? %>
          <%= link_to user_path(current_user.id), class:"text-white h6 mt-1" do%>
            <div class="d-flex">
            <i class="fas fa-home" style="color: #ffffff;"></i>
            <h6 class="ml-1">Home</h6>
            </div>
          <% end %>
          <%= link_to users_path, class:"text-white h6 mt-1 ml-3" do%>
            <div class="d-flex">
            <i class="fas fa-users" style="color: #ffffff;"></i>
            <h6 class="ml-1">Users</h6>
            </div>
          <% end %>
          <%= link_to books_path, class:"text-white h6 mt-1 ml-3" do%>
            <div class="d-flex">
            <i class="fas fa-book-open" style="color: #ffffff;"></i>
            <h6 class="ml-1">Books</h6>
            </div>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, class:"text-white h6 mt-1 ml-3" do%>
            <div class="d-flex">
            <i class="fas fa-sign-out-alt" style="color: #ffffff;"></i>
            <h6 class="ml-1">Log out</h6>
            </div>
          <% end %>
      <% else %>
          <%= link_to root_path, class:"text-white h6 mt-1" do%>
            <div class="d-flex">
            <i class="fas fa-home" style="color: #ffffff;"></i>
            <h6 class="ml-1">Home</h6>
            </div>
          <% end %>
          <%= link_to about_path, class:"text-white h6 mt-1 ml-3" do%>
            <div class="d-flex">
            <i class="fas fa-link" style="color: #ffffff;"></i>
            <h6 class="ml-1">About</h6>
            </div>
          <% end %>
          <%= link_to new_user_registration_path, class:"text-white h6 mt-1 ml-3" do%>
            <div class="d-flex">
            <i class="fas fa-user-plus" style="color: #ffffff;"></i>
            <h6 class="ml-1">Sign up</h6>
            </div>
          <% end %>
          <%= link_to new_user_session_path, class:"text-white h6 mt-1 ml-3" do%>
            <div class="d-flex">
            <i class="fas fa-sign-in-alt" style="color: #ffffff;"></i>
            <h6 class="ml-1">Log in</h6>
            </div>
          <% end %>
      <% end %>
      </div>
      </div>
      </div>
      </div>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
  </body>
</html>

