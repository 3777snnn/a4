<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
<div class="row">
<div class="col-lg-4"></div>
<div class="col-lg-4">
<h1>Profile Edit</h1>
<%= form_with model: @user do |f| %>
  <label for="inputName">name</label>
  <br><%= f.text_field :name, autofocus: true, id:"inputName" %>
  <br><br><label for="inputIntroduction">introduction</label>
  <br><%= f.text_area :introduction, autofocus: true, id:"inputName" %>
  <br><br><label for="Image">ProfileImage</label>
  <br><%= f.file_field :profile_image, placeholder: "プロフィール画像" %>
  <br><br><%= f.submit "Update User" %>
<% end %>
</div>
<div class="col-lg-4"></div>
</div>
</div>