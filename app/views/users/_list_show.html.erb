<h1 class="mt-3">User info</h1>
<%= image_tag user.get_current_icon(user.profile_image), size: "120x120" %>
<table class="table">
  <tbody>
    <tr>
      <th><h5>name</h5></th>
      <th><h5><%= user.name %></h5></th>
    </tr>
    <tr>
      <th><h5>introduction</h5></th>
      <th><h5><%= user.introduction %></h5></th>
    </tr>
  </tbody>
  </table>
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do%>
      <i class="fas fa-user-cog"></i>
    <% end %>

    <h1 class="mt-5">New book</h1>
    <%= form_with model: book, url:'/books' do |f| %>
      <h6>Title</h6>
      <%= f.text_field :title %>
      <h6 class="mt-4">Opinion</h6>
      <%= f.text_field :body %>
      <div class="mt-3 "><%= f.submit 'Create Book' %></div>
    <% end %>
