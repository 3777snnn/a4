<% flash.each do |message_type, message| %>
  <div><%= message %></div>
<% end %>

<script src="https://kit.fontawesome.com/3cec55645f.js" crossorigin="anonymous"></script>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user, book: @book %>
    </div>

    <div class="col-md-8  offset-md-1">
      <h1 class="mt-3">Books</h1>
      <table class="table table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
