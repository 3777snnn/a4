<% flash.each do |message_type, message| %>
  <div><%= message %></div>
<% end %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
<div class="row">
<div class="col-lg-4"></div>
<div class="col-lg-4">
<h1 class="mt-3">Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">title</label>
  <br><%= f.text_field :title, autofocus: true, id:"inputTitle" %>
  <br><label for="inputBody", class="mt-3">opinion</label>
  <br><%= f.text_area :body, autofocus: true, id:"input" %>
  <div class="mt-1"></div>
  <br><%= f.submit "Update Book" %>
<% end %>
<div class="mt-2"></div>
<div><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></div>
</div>
<div class="col-lg-4"></div>
</div>
</div>